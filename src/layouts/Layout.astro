<style is:global>
	html {
		font-family: 'Jost Variable', sans-serif;
		background-color: #F6F6F6;
		font-size: 16px;
	}
	h1 {
		font-size: 2.25rem;
		font-weight: 800;
	}
	h2 {
		font-size: 1.5rem;
		font-weight: 700;
	}
	h3 {
		font-size: 1.25rem;
		font-weight: 400;
		line-height: 140%;
	}
	p {
		font-size: 1.125rem;
		font-weight: 300;
		line-height: 140%;
	}
	
	@media (min-width: 576px) {
		h1 {
			font-size: 4rem;
		}
		h2 {
			font-size: 3rem;
		}
		h3 {
			font-size: 2rem;
		}
		p {
			font-size: 1.25rem;
		}
	}
</style>
